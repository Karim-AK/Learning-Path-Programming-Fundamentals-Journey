
#include <iostream>
#include <cmath>
#include <string>

using namespace std;

enum enWeekDays {Sunday=1, Monday=2, Tuesday=3, Wenesday=4, Thursday=5, Friday=6, Saturday=7};

void ShowWeekDaysMenue()
{
    cout << "*******************************" << endl;
    cout << "           Week Days           " << endl;
    cout << "*******************************" << endl;

    
        cout << "Please choose day number ?\n";
        cout << "(1) Sunday \n";
        cout << "(2) Monday \n";
        cout << "(3) Tuesday \n";
        cout << "(4) Wenesday \n";
        cout << "(5) Thursday \n";
        cout << "(6) Friday \n";
        cout << "(4) Saturday \n";

        cout << "*******************************" << endl;
        cout << "Your choise? ";
}

enWeekDays ReedWeekDays()
{
    enWeekDays WeekDays;

    short WD;
    cin >> WD;
    return (enWeekDays)WD;
}

string GetWeekDayName(enWeekDays WeekDays)
{
    switch (WeekDays)
    {
    case enWeekDays::Sunday:

        return "Sunday";
        break;

    case enWeekDays::Monday:

        return "Monday";
        break;

    case enWeekDays::Tuesday:
        return "Tuesday";
        break;

    case enWeekDays::Wenesday:

        return "Wenesday";
        break;

    case enWeekDays::Thursday:

        return "Thursday";
        break;

    case enWeekDays::Friday:

        return "Friday";
        break;

    case enWeekDays::Saturday:

        return "Saturday";
        break;

    default:

        return "Not a week day! please try again";

    }

}

int main()
{

    ShowWeekDaysMenue();
    cout << "Today is " << GetWeekDayName(ReedWeekDays()) << endl;
    
    return 0;
}

